<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>注册</title>
    <link rel="stylesheet" href="/bootstarp/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="/bootstarp/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bootstarpValidate/css/bootstrapValidator.min.css">
    <link rel="stylesheet" href="/css/public.css">
    <script src="/js/jquery-3.2.1.min.js"></script>
    <script src="/bootstarp/js/bootstrap.min.js"></script>
    <script src="/bootstarpValidate/js/bootstrapValidator.min.js"></script>
    <script src="/bootstarpValidate/js/zh_CN.js"></script>
    <script src="/jquery-upload/js/zepto.min.js"></script>
    <script src="/jquery-upload/js/iscroll-zoom.js"></script>
    <script src="/jquery-upload/js/script.js"></script>
</head>

<body>
    <% include header.ejs %>
        <section class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <form action="/user/register" class="form-horizontal" method="post" id="registerForm">
                        <div class="form-group">
                            <h1>欢迎注册</h1>
                        </div>
                        <div class="form-group">
                            <label for="username-input">用户名</label>
                            <input type="text" name="username" class="form-control" id="username-input" placeholder="username">
                        </div>
                        <div class="form-group">
                            <label for="password-input">密码</label>
                            <input type="password" name="password" class="form-control" id="password-input" placeholder="password">
                        </div>
                        <div class="form-group">
                            <label for="confirm-input">确认密码</label>
                            <input type="password" name="confirmPassword" class="form-control" id="confirm-input" placeholder="确认密码">
                        </div>
                        <div class="form-group">
                            <label for="username-input">邮箱</label>
                            <input type="email" name="email" class="form-control" id="email-input" placeholder="email">
                        </div>
                        <div class="form-group">
                            <label for="username-input">手机</label>
                            <input type="text" name="phone" class="form-control" id="phone-input" placeholder="phone">
                        </div>
                        <div class="form-group">
                            <label>
                                <input type="checkbox"> 我遵守注册规定
                            </label>
                        </div>
                        <div class="form-group">
                            <a class="btn btn-default" href="/" role="button">取消</a>
                            <button type="submit" class="btn btn-default">注册</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
        <footer>
            <hr>
            <p>© Company 2014</p>
        </footer>
</body>
<script>
    $(function () {
        $('#registerForm').bootstrapValidator({
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
                username: {
                    validators: {
                        stringLength: {
                            min: 5,
                            message: '用户名长度最低为5'
                        },
                        notEmpty: {
                            message: '用户名必填'
                        },
                        regexp: {
                            regexp: /^[a-z]+\d+$/i,
                            message: '用户名必须是数字和字母组合'
                        }
                    }
                },
                password: {
                    validators: {
                        stringLength: {
                            enabled: true,
                            min: 5,
                            message: '密码长度最低为5位'
                        },
                        regexp: {
                            regexp: /^[a-z]+\d+$/i,
                            message: '密码必须为字母开头'
                        },
                        notEmpty: {
                            message: '密码不得为空'
                        },
                        different: {
                            field: 'username',
                            message: '密码和用户名不能相同'
                        }
                    }
                },
                confirmPassword: {
                    validators: {
                        notEmpty: {
                            message: '确认密码不得为空'
                        },
                        identical: {
                            field: 'password',
                            message: '确认密码输入不一致'
                        }
                    }
                },
                email: {
                    validators: {
                        notEmpty: {
                            message: '邮箱不得为空'
                        },
                        regexp: {
                            regexp: /^\w+([-+.]\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*$/i,
                            message: '邮箱格式不正确'
                        }
                    }
                },
                phone: {
                    validators: {
                        notEmpty: {
                            message: '手机号码不得为空'
                        },
                        regexp: {
                            regexp: /^1(3|4|5|7|8)\d{9}$/i,
                            message: '手机号码格式不正确'
                        }
                    }
                }
            },
        });
    });
</script>
</body>

</html>